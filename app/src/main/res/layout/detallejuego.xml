<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="197dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imagenDetalle"
                android:background="@android:color/black" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <RatingBar
                    android:id="@+id/estrellitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="1"
                    android:visibility="visible" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"

                android:paddingLeft="10dp"
                android:text="DescripciÃ³n:"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:paddingLeft="13dp"
                android:paddingTop="10dp"
                android:text="TextView"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/trucos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sombraListView"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="Trucos:"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/revTrucos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@color/sombraListView"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:scrollbars="horizontal|vertical" />

            <TextView
                android:id="@+id/logros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sombraListView"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="Logros:"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/revLogros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@color/sombraListView"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:scrollbars="horizontal|vertical" />

            <TextView
                android:id="@+id/otros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sombraListView"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="Otros:"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/revOtros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@color/sombraListView"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:scrollbars="horizontal|vertical" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btLanzar"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|end"
                android:layout_margin="16dp"
                android:clickable="true"
                android:padding="0dp"
                app:elevation="6dp"
                app:fabSize="normal"
                app:srcCompat="@android:drawable/ic_menu_send" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>